<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hotel Reservation Platform</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-modern">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-page="/Index">
                    <i class="bi bi-building me-2"></i>
                    <span>HotelReservation</span><span class="text-primary">Platform</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index">
                                <i class="bi bi-house-door me-1"></i>Ana Sayfa
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Hotels/Index">
                                <i class="bi bi-building me-1"></i>Oteller
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Tours/Index">
                                <i class="bi bi-airplane me-1"></i>Turlar
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Search/Index">
                                <i class="bi bi-search me-1"></i>Ara
                            </a>
                        </li>

                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-shield-check me-1"></i>Yönetim
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                        <li><h6 class="dropdown-header"><i class="bi bi-gear me-1"></i>Admin Paneli</h6></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Hotels/Index"><i class="bi bi-building me-2"></i>Otel Yönetimi</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Users/Index"><i class="bi bi-people me-2"></i>Kullanıcı Yönetimi</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/ManagerApplications/Index"><i class="bi bi-person-workspace me-2"></i>Yönetici Başvuruları</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Featured/Index"><i class="bi bi-star me-2"></i>Önerilen İçerik Yönetimi</a></li>
                                    </ul>
                                </li>
                            }
                            else if (User.IsInRole("HotelManager"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="managerDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-briefcase me-1"></i>Yönetim
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="managerDropdown">
                                        <li><h6 class="dropdown-header"><i class="bi bi-gear me-1"></i>Yönetici Paneli</h6></li>
                                        <li><a class="dropdown-item" asp-page="/Manager/Hotels/Index"><i class="bi bi-building me-2"></i>Otel Yönetimi</a></li>
                                        <li><a class="dropdown-item" asp-page="/Manager/Tours/Index"><i class="bi bi-airplane me-2"></i>Tur Yönetimi</a></li>
                                        <li><a class="dropdown-item" asp-page="/Manager/Reservations/Index"><i class="bi bi-journal-bookmark me-2"></i>Rezervasyon Yönetimi</a></li>
                                        <li><a class="dropdown-item" asp-page="/Manager/Reviews/Index"><i class="bi bi-chat-left-text me-2"></i>Yorum Yönetimi</a></li>
                                    </ul>
                                </li>
                            }

                            @if (User.IsInRole("Customer") || User.IsInRole("HotelManager"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Customer/MyReservations">
                                        <i class="bi bi-calendar-check me-1"></i>Rezervasyonlarım
                                    </a>
                                </li>
                            }
                            @if (User.IsInRole("Customer"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Customer/BecomeManager">
                                        <i class="bi bi-person-plus me-1"></i>Yönetici Ol
                                    </a>
                                </li>
                            }
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle user-menu" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle me-1"></i>
                                    <span class="d-none d-md-inline">@User.Identity.Name</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li><h6 class="dropdown-header"><i class="bi bi-person me-1"></i>Hesabım</h6></li>
                                    @if (User.IsInRole("Customer") || User.IsInRole("HotelManager"))
                                    {
                                        <li><a class="dropdown-item" asp-page="/Customer/Profile"><i class="bi bi-person-gear me-2"></i>Profilim</a></li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form method="post" asp-page="/Account/Login" asp-page-handler="Logout" class="d-inline">
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="bi bi-box-arrow-right me-2"></i>Çıkış Yap
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Account/Register">
                                    <i class="bi bi-person-plus me-1"></i>Kayıt Ol
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn-login" asp-page="/Account/Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>Giriş Yap
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container my-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container py-2">
            <span>© @DateTime.Now.Year - Hotel Reservation Platform</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
