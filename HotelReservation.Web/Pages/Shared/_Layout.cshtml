<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hotel Reservation Platform</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-page="/Index">
                    HotelReservation<span class="text-primary">Platform</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Hotels/Index">Oteller</a>
                        </li>

                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Admin/Hotels/Index">Admin Paneli</a>
                                </li>
                            }
                            else if (User.IsInRole("HotelManager"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Manager/Hotels/Index">Otel Yönetimi</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Manager/Reservations/Index">Rezervasyon Yönetimi</a>
                                </li>
                            }

                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Customer/MyReservations">Rezervasyonlarım</a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link">Merhaba, @User.Identity.Name</span>
                            </li>
                            <li class="nav-item">
                                <form method="post" asp-page="/Account/Login" asp-page-handler="Logout" class="d-inline">
                                    <button type="submit" class="btn btn-link nav-link" style="padding: 0;">Çıkış Yap</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Account/Login">Giriş Yap</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

    </header>

    <div class="container my-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container py-2">
            <span>© @DateTime.Now.Year - Hotel Reservation Platform</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
