@page
@model HotelReservation.Web.Pages.Reservations.CreateModel

@{
    ViewData["Title"] = "Rezervasyon Yap";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <h1 class="fw-bold mb-4">Rezervasyon Yap</h1>

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success alert-dismissible fade show shadow-sm">
                <i class="bi bi-check-circle me-2"></i>@Model.SuccessMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show shadow-sm">
                <i class="bi bi-exclamation-triangle me-2"></i>@Model.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="card shadow-sm">
            <div class="card-body p-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <input type="hidden" asp-for="RoomId" />

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">
                                <i class="bi bi-calendar-check me-2"></i>Giriş Tarihi
                            </label>
                            <input asp-for="CheckIn" type="date" class="form-control form-control-lg" 
                                   min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="CheckIn" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-semibold">
                                <i class="bi bi-calendar-x me-2"></i>Çıkış Tarihi
                            </label>
                            <input asp-for="CheckOut" type="date" class="form-control form-control-lg" />
                            <span asp-validation-for="CheckOut" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-semibold">
                                <i class="bi bi-people me-2"></i>Misafir Sayısı
                            </label>
                            <input asp-for="GuestCount" type="number" min="1" class="form-control form-control-lg" />
                            <span asp-validation-for="GuestCount" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mt-4 d-flex gap-2">
                        <button type="submit" class="btn btn-primary btn-lg px-5">
                            <i class="bi bi-check-circle me-2"></i>Rezervasyonu Onayla
                        </button>
                        <a asp-page="/Hotels/Index" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-x-circle me-2"></i>İptal
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
