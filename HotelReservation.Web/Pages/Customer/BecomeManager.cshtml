@page
@model HotelReservation.Web.Pages.Customer.BecomeManagerModel

@{
    ViewData["Title"] = "Otel Yöneticisi Başvurusu";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <h1 class="mb-4">Otel Yöneticisi Başvurusu</h1>

        @if (TempData["SuccessMessage"] is string successMsg)
        {
            <div class="alert alert-success alert-dismissible fade show">
                @successMsg
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] is string errorMsg)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                @errorMsg
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (Model.IsAlreadyManager)
        {
            <div class="alert alert-info">
                <h5>Zaten Otel Yöneticisisiniz!</h5>
                <p>Otel yönetim paneline erişmek için <a asp-page="/Manager/Hotels/Index" class="alert-link">buraya tıklayın</a>.</p>
            </div>
        }
        else if (Model.HasPendingApplication && Model.ExistingApplication != null)
        {
            <div class="alert alert-warning">
                <h5>Bekleyen Başvurunuz Var</h5>
                <p><strong>Başvuru Tarihi:</strong> @Model.ExistingApplication.ApplicationDate.ToString("dd MMMM yyyy HH:mm")</p>
                <p>Başvurunuz admin onayı bekliyor. Onaylandığında e-posta ile bilgilendirileceksiniz.</p>
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Otel Yöneticisi Olmak İster misiniz?</h5>
                    <p class="card-text">
                        Otel yöneticisi olarak platforma katılarak kendi otelinizi ekleyebilir, odalarınızı yönetebilir 
                        ve rezervasyonları takip edebilirsiniz. Başvurunuz admin tarafından incelendikten sonra onaylanacaktır.
                    </p>

                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label">Notlar (Opsiyonel)</label>
                            <textarea asp-for="Notes" class="form-control" rows="4" 
                                      placeholder="Kendiniz veya oteliniz hakkında bilgi verebilirsiniz..."></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">Başvuru Gönder</button>
                            <a asp-page="/Index" class="btn btn-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

