@page
@model HotelReservation.Web.Pages.Admin.Hotels.IndexModel

@{
    ViewData["Title"] = "Admin - Otel Yönetimi";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Admin - Otel Yönetimi</h1>
    <div class="btn-group">
        <a asp-page="/Admin/Users/Index" class="btn btn-outline-info">
            <i class="bi bi-people me-2"></i>Kullanıcı Yönetimi
        </a>
        <a asp-page="/Admin/ManagerApplications/Index" class="btn btn-outline-primary">
            <i class="bi bi-person-workspace me-2"></i>Yönetici Başvuruları
            @if (Model.PendingManagerApplicationsCount > 0)
            {
                <span class="badge bg-warning text-dark ms-1">@Model.PendingManagerApplicationsCount</span>
            }
        </a>
    </div>
</div>

@if (TempData["Message"] is string msg)
{
    <div class="alert alert-success">@msg</div>
}
@if (TempData["ErrorMessage"] is string emsg)
{
    <div class="alert alert-danger">@emsg</div>
}

@if (Model.PendingCount > 0)
{
    <div class="alert alert-warning">
        <strong>@Model.PendingCount</strong> adet
        <strong>onay bekleyen otel</strong> bulunuyor.
        Aşağıdaki listeden inceleyip onaylayabilirsiniz.
    </div>
}
else
{
    <div class="alert alert-success">
        Şu anda onay bekleyen otel bulunmuyor.
    </div>
}

<div class="btn-group mb-3">
    <a asp-page="./Index"
       asp-route-statusFilter="pending"
       class="btn btn-outline-warning @(Model.StatusFilter == "pending" ? "active" : "")">
        Onay Bekleyen (@Model.PendingCount)
    </a>
    <a asp-page="./Index"
       asp-route-statusFilter="approved"
       class="btn btn-outline-success @(Model.StatusFilter == "approved" ? "active" : "")">
        Onaylı Oteller
    </a>
    <a asp-page="./Index"
       asp-route-statusFilter="all"
       class="btn btn-outline-secondary @(Model.StatusFilter == "all" ? "active" : "")">
        Tüm Oteller
    </a>
</div>

@if (Model.Hotels == null || !Model.Hotels.Any())
{
    <div class="alert alert-info">
        Seçilen filtreye göre görüntülenecek otel bulunamadı.
    </div>
}
else
{
    <table class="table table-striped table-hover align-middle">
        <thead>
            <tr>
                <th>Otel</th>
                <th>Şehir</th>
                <th>Yönetici</th>
                <th>Onay Durumu</th>
                <th>Oluşturulma</th>
                <th>İşlemler</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var h in Model.Hotels)
            {
                <tr class="@(h.IsApproved ? "" : "table-warning")">
                    <td>@h.Name</td>
                    <td>@h.City</td>
                    <td>
                        @h.Manager?.FullName
                        <br />
                        <small class="text-muted">@h.Manager?.Email</small>
                    </td>
                    <td>
                        @if (h.IsApproved)
                        {
                            <span class="badge bg-success">Onaylı</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Onay Bekliyor</span>
                        }
                    </td>
                    <td>@h.CreatedAt.ToLocalTime()</td>
                    <td>
                        <a asp-page="./Details" asp-route-id="@h.Id" class="btn btn-sm btn-primary">
                            İncele / Onayla
                        </a>
                    </td>
                    <td>
                        @if (!h.IsApproved)
                        {
                            <form method="post" asp-page-handler="Delete" class="d-inline ms-1"
                                  onsubmit="return confirm('Bu onaylanmamış oteli silmek istediğinize emin misiniz?');">
                                <input type="hidden" name="id" value="@h.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">Sil</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
