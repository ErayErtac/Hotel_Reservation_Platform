@page
@model HotelReservation.Web.Pages.Admin.Hotels.DetailsModel

@{
    ViewData["Title"] = "Admin - Otel Detayı";
}

<a asp-page="./Index" class="btn btn-link">&larr; Otel listesine dön</a>

@if (Model.Hotel == null)
{
    <div class="alert alert-danger">Otel bulunamadı.</div>
}
else
{
    if (!Model.Hotel.IsApproved)
    {
        <div class="alert alert-warning">
            <strong>Bu otel henüz onaylanmamış.</strong><br />
            Bilgileri inceleyip aşağıdaki butonla onaylayabilirsiniz.
        </div>
    }
    else
    {
        <div class="alert alert-success">
            Bu otel <strong>onaylanmış</strong> ve müşterilere açık.
        </div>
    }

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <h3 class="card-title">@Model.Hotel.Name</h3>
                    <h6 class="card-subtitle mb-2 text-muted">@Model.Hotel.City</h6>
                    <p><strong>Adres:</strong> @Model.Hotel.Address</p>
                    <p><strong>Açıklama:</strong> @Model.Hotel.Description</p>
                    <p>
                        <strong>Oluşturulma:</strong> @Model.Hotel.CreatedAt.ToLocalTime()
                    </p>
                    <p>
                        <strong>Otel Yöneticisi:</strong><br />
                        @Model.Hotel.Manager?.FullName <br />
                        <span class="text-muted">@Model.Hotel.Manager?.Email</span>
                    </p>

                    <form method="post" asp-page-handler="Approve" asp-route-id="@Model.Hotel.Id">
                        <button type="submit"
                                class="btn btn-success"
                                @(Model.Hotel.IsApproved ? "disabled" : null)>
                            Oteli Onayla
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <h4>Temel Bilgiler</h4>
            <ul class="list-group mb-3">
                <li class="list-group-item d-flex justify-content-between">
                    <span>Onay Durumu</span>
                    <span>
                        @if (Model.Hotel.IsApproved)
                        {
                            <span class="badge bg-success">Onaylı</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Onay Bekliyor</span>
                        }
                    </span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                    <span>Aktif</span>
                    <span>@(Model.Hotel.IsActive ? "Evet" : "Hayır")</span>
                </li>
                <li class="list-group-item">
                    Bu otelin odalarını ve resimlerini
                    <strong>Otel Yöneticisi panelinden</strong> yönetebilirsiniz.
                </li>
            </ul>
        </div>
    </div>
}
