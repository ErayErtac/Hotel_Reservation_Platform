@page
@model HotelReservation.Web.Pages.Hotels.IndexModel

@{
    ViewData["Title"] = "Oteller";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Oteller</h1>
    <span class="text-muted">
        @Model.Hotels.Count @(" otel bulundu")
    </span>
</div>

@if (Model.Hotels == null || !Model.Hotels.Any())
{
    <div class="alert alert-info">
        Şu anda listelenecek otel bulunamadı.
    </div>
}
else
{
    <div class="row g-3">
        @foreach (var hotel in Model.Hotels)
        {
            var avgRating = Model.GetAverageRating(hotel);
            var mainImage = hotel.Images?.FirstOrDefault(i => i.IsMain)?.ImagePath;

            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(mainImage))
                    {
                        <img src="@mainImage" class="card-img-top" style="height: 180px; object-fit: cover;" />
                    }
                    
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@hotel.Name</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@hotel.City</h6>
                        <p class="card-text flex-grow-1">
                            @hotel.Description
                        </p>
                        <ul class="list-unstyled small mb-3">
                            <li><strong>Oda Sayısı:</strong> @(hotel.Rooms?.Count ?? 0)</li>
                            <li>
                                <strong>Ortalama Puan:</strong>
                                @if (avgRating.HasValue)
                                {
                                    @avgRating.Value.ToString("0.0") @: / 5
                                }
                                else
                                {
                                    <span>Henüz yorum yok</span>
                                }
                            </li>
                        </ul>
                        <a asp-page="./Details" asp-route-id="@hotel.Id" class="btn btn-primary mt-auto">
                            Detayları Gör
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
