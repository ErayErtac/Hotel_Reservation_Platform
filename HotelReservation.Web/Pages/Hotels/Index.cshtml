@page
@model HotelReservation.Web.Pages.Hotels.IndexModel

@{
    ViewData["Title"] = "Oteller";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="fw-bold mb-2">Oteller</h1>
        <p class="text-muted mb-0">@Model.TotalCount otel bulundu</p>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.SearchCity))
{
    <div class="alert alert-info alert-dismissible fade show shadow-sm">
        <i class="bi bi-info-circle me-2"></i>
        <strong>Şehir:</strong> @Model.SearchCity için sonuçlar gösteriliyor.
        <a asp-page="./Index" class="ms-2 fw-bold">Tüm otelleri göster</a>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model.Hotels == null || !Model.Hotels.Any())
{
    <div class="text-center py-5">
        <div class="mb-4">
            <i class="bi bi-building" style="font-size: 5rem; color: #dee2e6;"></i>
        </div>
        <h3 class="text-muted">Otel bulunamadı</h3>
        <p class="text-muted">Şu anda listelenecek otel bulunmuyor.</p>
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var hotel in Model.Hotels)
        {
            var avg = Model.GetAverageRating(hotel);
            var mainImage = hotel.Images?.FirstOrDefault(i => i.IsMain)?.ImagePath ?? "https://via.placeholder.com/400x200?text=Hotel";
            var minPrice = hotel.Rooms != null && hotel.Rooms.Any()
                ? hotel.Rooms.Min(r => r.PricePerNight)
                : (decimal?)null;

            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm hotel-card">
                    <div class="position-relative">
                        <img src="@mainImage"
                             class="card-img-top"
                             style="height: 200px; object-fit: cover;"
                             alt="@hotel.Name"
                             onerror="this.src='https://via.placeholder.com/400x200?text=Hotel'">
                        @if (avg.HasValue && avg.Value > 0)
                        {
                            <div class="position-absolute top-0 end-0 m-3">
                                <span class="badge bg-warning text-dark" style="font-size: 0.9rem;">
                                    ⭐ @avg.Value.ToString("0.0")
                                </span>
                            </div>
                        }
                    </div>

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold mb-2">@hotel.Name</h5>
                        <p class="text-muted mb-3">
                            <i class="bi bi-geo-alt-fill me-1"></i>@hotel.City
                        </p>

                        @if (!string.IsNullOrEmpty(hotel.Description))
                        {
                            <p class="card-text small text-muted mb-3 flex-grow-1">
                                @(hotel.Description.Length > 100
                                    ? hotel.Description.Substring(0, 100) + "..."
                                    : hotel.Description)
                            </p>
                        }

                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                @if (minPrice.HasValue)
                                {
                                    <div>
                                        <small class="text-muted d-block">Başlangıç Fiyatı</small>
                                        <strong class="text-primary fs-5">@minPrice.Value.ToString("C")</strong>
                                        <small class="text-muted">/ gece</small>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted">Fiyat bilgisi yok</span>
                                }
                            </div>

                            <a asp-page="./Details"
                               asp-route-id="@hotel.Id"
                               class="btn btn-primary w-100">
                                <i class="bi bi-eye me-2"></i>Detayları Gör
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Sayfa navigasyonu" class="mt-5">
            <ul class="pagination justify-content-center">
                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-page="./Index" asp-route-page="@(Model.CurrentPage - 1)" asp-route-city="@Model.SearchCity">
                            <i class="bi bi-chevron-left"></i> Önceki
                        </a>
                    </li>
                }

                @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-page="./Index" asp-route-page="@i" asp-route-city="@Model.SearchCity">@i</a>
                    </li>
                }

                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" asp-page="./Index" asp-route-page="@(Model.CurrentPage + 1)" asp-route-city="@Model.SearchCity">
                            Sonraki <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }
}
