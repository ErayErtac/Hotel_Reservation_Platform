@page
@model HotelReservation.Web.Pages.Hotels.IndexModel

@{
    ViewData["Title"] = "Oteller";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Oteller</h1>
    <span class="text-muted">
        @Model.Hotels.Count @(" otel bulundu")
    </span>
</div>

@if (Model.Hotels == null || !Model.Hotels.Any())
{
    <div class="alert alert-info">
        Şu anda listelenecek otel bulunamadı.
    </div>
}
else
{
    <div class="row g-3">
        @foreach (var hotel in Model.Hotels)
        {
            var avg = Model.GetAverageRating(hotel);
            var mainImage = hotel.Images?.FirstOrDefault(i => i.IsMain)?.ImagePath;
            var minPrice = hotel.Rooms != null && hotel.Rooms.Any()
            ? hotel.Rooms.Min(r => r.PricePerNight)
            : (decimal?)null;

            <div class="col">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(mainImage))
                    {
                        <img src="@mainImage"
                             class="card-img-top"
                             style="height: 180px; object-fit: cover;" />
                    }

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title mb-1">@hotel.Name</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@hotel.City</h6>

                        @if (!string.IsNullOrEmpty(hotel.Description))
                        {
                            <p class="card-text small text-muted">
                                @(
                                                    hotel.Description.Length > 90
                                                    ? hotel.Description.Substring(0, 90) + "..."
                                                    : hotel.Description
                                                    )
                            </p>
                        }

                        <div class="mt-auto">
                            <div class="mb-2">
                                @if (avg.HasValue && avg.Value > 0)
                                {
                                    <span class="badge bg-warning text-dark me-1">
                                        ⭐ @avg.Value.ToString("0.0") / 5
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary me-1">
                                        Henüz yorum yok
                                    </span>
                                }

                                @if (minPrice.HasValue)
                                {
                                    <span class="badge bg-success">
                                        Gecelik @minPrice.Value.ToString("C")'den başlayan
                                    </span>
                                }
                            </div>

                            <a asp-page="./Details"
                               asp-route-id="@hotel.Id"
                               class="btn btn-sm btn-primary">
                                Detayları Gör
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
