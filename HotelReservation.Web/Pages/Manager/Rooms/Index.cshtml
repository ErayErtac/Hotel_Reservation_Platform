@page
@model HotelReservation.Web.Pages.Manager.Rooms.IndexModel

@{
    ViewData["Title"] = "Oda Yönetimi";
}

<!-- TempData mesajları burada -->
@if (TempData["Message"] is string msg)
{
    <div class="alert alert-success">@msg</div>
}
@if (TempData["ErrorMessage"] is string emsg)
{
    <div class="alert alert-danger">@emsg</div>
}

@if (Model.Hotel == null)
{
    <div class="alert alert-danger">Otel bulunamadı veya bu otele erişim izniniz yok.</div>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold mb-2">@Model.Hotel.Name - Odalar</h1>
            <p class="text-muted mb-0">Otel odalarınızı yönetin</p>
        </div>
        <div>
            <a asp-page="/Manager/Hotels/Index" class="btn btn-outline-secondary me-2">
                <i class="bi bi-arrow-left me-2"></i>Otel Listesine Dön
            </a>
            <a asp-page="./Create" asp-route-hotelId="@Model.Hotel.Id" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Yeni Oda Ekle
            </a>
        </div>
    </div>

    @if (Model.Rooms == null || !Model.Rooms.Any())
    {
        <div class="alert alert-info">
            Bu otel için henüz oda tanımlanmamış.
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4">Oda No</th>
                                <th>Kapasite</th>
                                <th>Gecelik Fiyat</th>
                                <th>Açıklama</th>
                                <th>Aktif</th>
                                <th class="text-end pe-4">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var r in Model.Rooms)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <strong class="text-primary">@r.RoomNumber</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@r.Capacity kişi</span>
                                    </td>
                                    <td>
                                        <strong class="text-success">@r.PricePerNight.ToString("C")</strong>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(r.Description))
                                        {
                                            <span class="text-muted">@(r.Description.Length > 50 ? r.Description.Substring(0, 50) + "..." : r.Description)</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted fst-italic">Açıklama yok</span>
                                        }
                                    </td>
                                    <td>
                                        @if (r.IsActive)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle me-1"></i>Aktif
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-x-circle me-1"></i>Pasif
                                            </span>
                                        }
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="d-flex gap-2 justify-content-end">
                                            <a asp-page="./Edit"
                                               asp-route-id="@r.Id"
                                               asp-route-hotelId="@Model.Hotel.Id"
                                               class="btn btn-sm btn-primary">
                                                <i class="bi bi-pencil me-1"></i>Düzenle
                                            </a>

                                            <a asp-page="./Details"
                                               asp-route-id="@r.Id"
                                               asp-route-hotelId="@Model.Hotel.Id"
                                               class="btn btn-sm btn-info text-white">
                                                <i class="bi bi-eye me-1"></i>Detay
                                            </a>

                                            <form method="post"
                                                  asp-page-handler="Delete"
                                                  asp-route-id="@r.Id"
                                                  asp-route-hotelId="@Model.Hotel.Id"
                                                  onsubmit="return confirm('Bu odayı silmek istediğinize emin misiniz? Bu işlem geri alınamaz.');"
                                                  class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-danger">
                                                    <i class="bi bi-trash me-1"></i>Sil
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
}
