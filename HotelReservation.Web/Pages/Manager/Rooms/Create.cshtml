@page
@model HotelReservation.Web.Pages.Manager.Rooms.CreateModel

@{
    ViewData["Title"] = "Yeni Oda Ekle";
}

@if (Model.Hotel == null)
{
    <div class="alert alert-danger">Otel bulunamadı veya bu otele erişim izniniz yok.</div>
}
else
{
    <h1>@Model.Hotel.Name - Yeni Oda</h1>

    <form method="post" class="row g-3">
        <input type="hidden" asp-for="HotelId" />

        <div class="col-md-3">
            <label class="form-label">Oda No</label>
            <input asp-for="Input.RoomNumber" class="form-control" />
            <span asp-validation-for="Input.RoomNumber" class="text-danger"></span>
        </div>

        <div class="col-md-2">
            <label class="form-label">Kapasite</label>
            <input asp-for="Input.Capacity" type="number" min="1" class="form-control" />
            <span asp-validation-for="Input.Capacity" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label class="form-label">Gecelik Fiyat</label>
            <input asp-for="Input.PricePerNight" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="Input.PricePerNight" class="text-danger"></span>
        </div>

        <div class="col-md-12">
            <label class="form-label">Açıklama</label>
            <textarea asp-for="Input.Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Input.Description" class="text-danger"></span>
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-success">Kaydet</button>
            <a asp-page="./Index" asp-route-hotelId="@Model.Hotel.Id" class="btn btn-secondary ms-2">İptal</a>
        </div>
    </form>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
}
