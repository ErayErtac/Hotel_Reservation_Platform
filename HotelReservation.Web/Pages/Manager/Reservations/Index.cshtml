@page
@model HotelReservation.Web.Pages.Manager.Reservations.IndexModel

@{
    ViewData["Title"] = "Rezervasyon Yönetimi";
}

<h1>Rezervasyon Yönetimi</h1>

<p>
    <a asp-page="/Manager/Hotels/Index" class="btn btn-link">&larr; Otellerime dön</a>
</p>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (Model.Reservations == null || !Model.Reservations.Any())
{
    <div class="alert alert-info">
        Şu anda yönettiğiniz otellere ait rezervasyon bulunmuyor.
    </div>
}
else
{
    <table class="table table-striped table-hover align-middle">
        <thead>
            <tr>
                <th>#</th>
                <th>Otel</th>
                <th>Oda</th>
                <th>Müşteri</th>
                <th>Giriş</th>
                <th>Çıkış</th>
                <th>Kişi</th>
                <th>Tutar</th>
                <th>Durum</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model.Reservations)
            {
                <tr>
                    <td>@r.Id</td>
                    <td>@r.Room.Hotel.Name</td>
                    <td>@r.Room.RoomNumber</td>
                    <td>@r.Customer.FullName</td>
                    <td>@r.CheckIn.ToShortDateString()</td>
                    <td>@r.CheckOut.ToShortDateString()</td>
                    <td>@r.GuestCount</td>
                    <td>@r.TotalPrice.ToString("C")</td>
                    <td>
                        @switch (r.Status)
                        {
                            case HotelReservation.Core.Enums.ReservationStatus.Pending:
                                @:<span class="badge bg-warning text-dark">Beklemede</span>
                                break;
                            case HotelReservation.Core.Enums.ReservationStatus.Confirmed:
                                @:<span class="badge bg-success">Onaylandı</span>
                                break;
                            case HotelReservation.Core.Enums.ReservationStatus.Cancelled:
                                @:<span class="badge bg-secondary">İptal</span>
                                break;
                            default:
                                @:<span class="badge bg-light text-dark">Bilinmiyor</span>
                                break;
                        }
                    </td>
                    <td>
                        @if (r.Status == HotelReservation.Core.Enums.ReservationStatus.Pending)
                        {
                            <form method="post" asp-page-handler="Approve" class="d-inline">
                                <input type="hidden" name="id" value="@r.Id" />
                                <button type="submit" class="btn btn-sm btn-success">Onayla</button>
                            </form>
                            <form method="post" asp-page-handler="Cancel" class="d-inline ms-1"
                                  onsubmit="return confirm('Bu rezervasyonu iptal etmek istediğinize emin misiniz?');">
                                <input type="hidden" name="id" value="@r.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">İptal</button>
                            </form>
                        }
                        else if (r.Status == HotelReservation.Core.Enums.ReservationStatus.Confirmed)
                        {
                            <form method="post" asp-page-handler="Cancel" class="d-inline"
                                  onsubmit="return confirm('Onaylı rezervasyonu iptal etmek istediğinize emin misiniz?');">
                                <input type="hidden" name="id" value="@r.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">İptal</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
