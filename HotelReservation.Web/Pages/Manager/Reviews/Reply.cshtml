@page
@model HotelReservation.Web.Pages.Manager.Reviews.ReplyModel

@{
    ViewData["Title"] = "Yoruma Yanıt Ver";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="fw-bold mb-0">Yoruma Yanıt Ver</h1>
            <a asp-page="/Manager/Reviews/Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Yorumlara Dön
            </a>
        </div>

        @if (Model.Review != null)
        {
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Yorum</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <strong>@Model.Review.Customer.FullName</strong>
                            <div class="text-muted small">@Model.Review.CreatedAt.ToString("dd MMMM yyyy HH:mm")</div>
                        </div>
                        <div>
                            @for (int i = 1; i <= 5; i++)
                            {
                                <span class="@(i <= Model.Review.Rating ? "text-warning" : "text-muted")">⭐</span>
                            }
                            <span class="ms-2">@Model.Review.Rating / 5</span>
                        </div>
                    </div>
                    <p class="mb-0">@Model.Review.Comment</p>
                </div>
            </div>

            @if (Model.Review.Replies != null && Model.Review.Replies.Any())
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Mevcut Yanıtlar</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var reply in Model.Review.Replies.OrderBy(r => r.CreatedAt))
                        {
                            <div class="border-start border-primary ps-3 mb-3">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <strong>@reply.Manager.FullName</strong>
                                        <span class="badge bg-primary ms-2">Otel Yöneticisi</span>
                                        <div class="text-muted small">@reply.CreatedAt.ToString("dd MMMM yyyy HH:mm")</div>
                                    </div>
                                </div>
                                <p class="mb-0 mt-2">@reply.ReplyText</p>
                            </div>
                        }
                    </div>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    <i class="bi bi-exclamation-triangle me-2"></i>@Model.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="ReplyText" class="form-label fw-semibold">Yanıtınız</label>
                            <textarea asp-for="ReplyText" class="form-control" rows="5" 
                                      placeholder="Yorumu yanıtlayın..."></textarea>
                            <span asp-validation-for="ReplyText" class="text-danger"></span>
                            <small class="text-muted">Maksimum 1000 karakter</small>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary btn-lg px-5">
                                <i class="bi bi-send me-2"></i>Yanıtı Gönder
                            </button>
                            <a asp-page="/Manager/Reviews/Index" class="btn btn-outline-secondary btn-lg">
                                İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

