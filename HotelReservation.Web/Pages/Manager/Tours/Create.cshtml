@page
@model HotelReservation.Web.Pages.Manager.Tours.CreateModel

@{
    ViewData["Title"] = "Yeni Tur Ekle";
}

<h1>Yeni Tur Ekle</h1>

<form method="post" class="row g-3">
    <div asp-validation-summary="All" class="text-danger mb-2"></div>

    <div class="col-md-6">
        <label class="form-label">Tur Adı</label>
        <input asp-for="Input.Name" class="form-control" />
        <span asp-validation-for="Input.Name" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label class="form-label">Şehir</label>
        <input asp-for="Input.City" class="form-control" />
        <span asp-validation-for="Input.City" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label class="form-label">Başlangıç Tarihi</label>
        <input asp-for="Input.StartDate" type="date" class="form-control" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="Input.StartDate" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label class="form-label">Bitiş Tarihi</label>
        <input asp-for="Input.EndDate" type="date" class="form-control" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="Input.EndDate" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label class="form-label">Fiyat (Kişi Başı)</label>
        <input asp-for="Input.Price" type="number" step="0.01" min="0" class="form-control" />
        <span asp-validation-for="Input.Price" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label class="form-label">Maksimum Kapasite</label>
        <input asp-for="Input.Capacity" type="number" min="1" class="form-control" />
        <span asp-validation-for="Input.Capacity" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label class="form-label">Açıklama</label>
        <textarea asp-for="Input.Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Input.Description" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label class="form-label">Tur Programı (İtinerary)</label>
        <textarea asp-for="Input.Itinerary" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Input.Itinerary" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-success">Kaydet</button>
        <a asp-page="./Index" class="btn btn-secondary ms-2">İptal</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

