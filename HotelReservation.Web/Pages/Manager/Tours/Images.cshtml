@page
@model HotelReservation.Web.Pages.Manager.Tours.ImagesModel

@{
    ViewData["Title"] = "Tur Fotoğrafları";
}

@if (Model.Tour == null)
{
    <div class="alert alert-danger">Tur bulunamadı veya bu tura erişim izniniz yok.</div>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold mb-2">@Model.Tour.Name - Fotoğraflar</h1>
            <p class="text-muted mb-0">Tur fotoğraflarınızı yönetin</p>
        </div>
        <a asp-page="/Manager/Tours/Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Tur Listesine Dön
        </a>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-cloud-upload me-2"></i>Yeni Fotoğraf Yükle</h5>
        </div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data" asp-page-handler="Upload">
                <input type="hidden" asp-for="TourId" />
                <div class="mb-3">
                    <label class="form-label fw-semibold">Fotoğraf Seçin</label>
                    <input type="file" name="UploadFiles" multiple accept="image/*" class="form-control" />
                    <small class="text-muted">Birden fazla fotoğraf seçebilirsiniz (JPG, PNG, GIF)</small>
                </div>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-upload me-2"></i>Fotoğrafları Yükle
                </button>
            </form>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="mb-0">Mevcut Fotoğraflar</h5>
        <span class="badge bg-primary">@Model.Images.Count() fotoğraf</span>
    </div>

    @if (!Model.Images.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>Bu tura ait kayıtlı fotoğraf bulunmuyor. Yukarıdan fotoğraf yükleyebilirsiniz.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var img in Model.Images)
            {
                <div class="col-md-4 col-lg-3">
                    <div class="card h-100 shadow-sm">
                        <div class="position-relative">
                            <img src="@img.ImagePath"
                                 class="card-img-top"
                                 style="object-fit: cover; height: 200px;"
                                 alt="Tur fotoğrafı"
                                 onerror="this.src='https://via.placeholder.com/400x200?text=Image+Not+Found'">
                            @if (img.IsMain)
                            {
                                <div class="position-absolute top-0 start-0 m-2">
                                    <span class="badge bg-success">
                                        <i class="bi bi-star-fill me-1"></i>Ana Fotoğraf
                                    </span>
                                </div>
                            }
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                @if (img.IsMain)
                                {
                                    <span class="badge bg-success">Ana Fotoğraf</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Diğer</span>
                                }
                                <small class="text-muted">@img.UploadedAt.ToLocalTime().ToShortDateString()</small>
                            </div>

                            <div class="d-grid gap-2">
                                @if (!img.IsMain)
                                {
                                    <form method="post" asp-page-handler="SetMain" class="d-inline">
                                        <input type="hidden" name="TourId" value="@Model.Tour.Id" />
                                        <input type="hidden" name="imageId" value="@img.Id" />
                                        <button type="submit" class="btn btn-sm btn-primary w-100">
                                            <i class="bi bi-star me-1"></i>Ana Yap
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <button class="btn btn-sm btn-outline-secondary w-100" disabled>
                                        <i class="bi bi-check-circle me-1"></i>Ana Fotoğraf
                                    </button>
                                }

                                <form method="post" asp-page-handler="Delete" class="d-inline"
                                      onsubmit="return confirm('Bu fotoğrafı silmek istediğinizden emin misiniz?');">
                                    <input type="hidden" name="TourId" value="@Model.Tour.Id" />
                                    <input type="hidden" name="imageId" value="@img.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger w-100">
                                        <i class="bi bi-trash me-1"></i>Sil
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
}

