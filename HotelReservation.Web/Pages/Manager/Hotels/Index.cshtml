@page
@model HotelReservation.Web.Pages.Manager.Hotels.IndexModel

@{
    ViewData["Title"] = "Otel Yönetimi";
}

<h1>Otel Yönetimi</h1>

<p>
    <a asp-page="./Create" class="btn btn-primary">Yeni Otel Ekle</a>
</p>

@if (TempData["Message"] is string msg)
{
    <div class="alert alert-success">@msg</div>
}
@if (TempData["ErrorMessage"] is string emsg)
{
    <div class="alert alert-danger">@emsg</div>
}


@if (Model.Hotels == null || !Model.Hotels.Any())
{
    <div class="alert alert-info">
        Şu anda üzerinize kayıtlı otel bulunmuyor.
    </div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Otel</th>
                <th>Şehir</th>
                <th>Onay Durumu</th>
                <th>Aktif</th>
                <th>Oluşturulma</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var h in Model.Hotels)
            {
                <tr>
                    <td>@h.Name</td>
                    <td>@h.City</td>
                    <td>
                        @(h.IsApproved ? "Onaylı" : "Onaysız (admin onayı gerekiyor)")
                    </td>
                    <td>@(h.IsActive ? "Evet" : "Hayır")</td>
                    <td>@h.CreatedAt.ToLocalTime()</td>
                    <td>
                        <a asp-page="/Manager/Rooms/Index"
                           asp-route-hotelId="@h.Id"
                           class="btn btn-sm btn-outline-secondary">
                            Odaları Yönet
                        </a>

                        <a asp-page="/Manager/Hotels/Images"
                           asp-route-HotelId="@h.Id"
                           class="btn btn-sm btn-outline-primary ms-1">
                            Fotoğrafları Yönet
                        </a>

                        <form method="post" asp-page-handler="Delete" class="d-inline ms-1"
                              onsubmit="return confirm('Bu oteli silmek istediğinize emin misiniz? Bu işlem geri alınamaz.');">
                            <input type="hidden" name="id" value="@h.Id" />
                            <button type="submit" class="btn btn-sm btn-outline-danger">Otel Sil</button>
                        </form>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}
